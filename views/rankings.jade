extends ./layout
block content
    div(ng-controller="rankingsController")
        table.table.table-bordered.table-hover.table-condensed
            thead
                tr
                    th.col-xs-2 Ranking
                    th.col-xs-5 Email
                    th.col-xs-5 Points
            tbody
                tr(ng-repeat="user in users")
                    td {{$index}}
                    td {{user.email}}
                    td {{user.points}}